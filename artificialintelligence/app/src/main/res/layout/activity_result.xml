<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/totallbl"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:background="@drawable/edittextstyle"
        android:text="Total - 100"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/wornglbl"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:layout_below="@+id/completedlbl"
        android:background="@drawable/edittextstyle"
        android:text="Worng - 40"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/wornglbl"
        android:layout_above="@+id/nextbtn"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:background="@drawable/edittextstyle"

        android:orientation="horizontal" >
    </LinearLayout>

    <ImageButton
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/next" />

    <TextView
        android:id="@+id/completedlbl"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_above="@+id/rightlbl"
        android:layout_alignRight="@+id/linear"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittextstyle"
        android:gravity="center"
        android:text="Completed - 100"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/rightlbl"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/completedlbl"
        android:layout_below="@+id/totallbl"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittextstyle"
        android:gravity="center"
        android:text="Right - 60"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

</RelativeLayout>